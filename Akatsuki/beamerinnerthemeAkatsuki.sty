%
% Title page frame
%
%

\defbeamertemplate*{title page}{Akatsuki}[1][]
{ 
  \vskip1cm%
  % \begin{beamercolorbox}[wd=12cm,center]{}
  \begin{beamercolorbox}[wd=12cm,leftskip=1cm,sep=8pt,#1]{title page header}
    \usebeamerfont{title}\inserttitle\par%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,sep=8pt,#1]{title page header}
    % \usebeamerfont{title}
    {\small \insertsubtitle}\par%
  \end{beamercolorbox}%
  % \end{beamercolorbox}
  \vskip4.75cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{author}
    \usebeamerfont{author}\insertauthor%
  \end{beamercolorbox}
   \vskip0.2cm%
  \begin{beamercolorbox}[wd=12cm,leftskip=3cm,#1]{date}
    \usebeamerfont{author}\insertdate%
  \end{beamercolorbox}
  \vfill
}



